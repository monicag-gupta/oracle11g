CREATE TABLE IF NOT EXISTS Products  (	
      Product_ID int NOT NULL,
      Product_name varchar(45) NOT NULL,
      Quantity_in_hand int NOT NULL,
      Re_order_quantity INT,
      Re_order_level INT,
      Price INT NULL,
      PRIMARY KEY(Product_ID)
);









